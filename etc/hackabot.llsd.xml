    </array>

    <!-- command specific config blocks -->
    <key>cmdconfig</key>
    <map>

        <!-- imitate command config -->
        <key>imitate</key>
        <map>
            <key>limitlines</key>
            <integer>200</integer>
            <key>maxlines</key>
            <integer>50</integer>
            <key>maxwords</key>
            <integer>40</integer>
            <key>wordlength</key>
            <integer>5</integer>
        </map>

        <!-- seen command config -->
        <!--
        <key>seen</key>
        <map>
            <key>privatechan</key>
            <array>
                <string>#private</string>
            </array>
        </map>
        -->
        
        <!-- bookmark command -->
        <!--
        <key>bookmark</key>
        <map>
